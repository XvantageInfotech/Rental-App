<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/royal_blue</item>
    </style>

    <style name="OnboardingCardStyle">
        <item name="cardElevation">20dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:background">@drawable/top_elevation_card</item> <!-- Use custom drawable -->
    </style>


    <!-- Title Text Style -->
    <style name="OnboardingTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>


    <!-- Title permissionText Style -->
    <style name="OnboardingTitlePermissionTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>
    <!-- Subtitle Permission Text Style -->
    <style name="OnboardingSubtitlePermissionTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/gray_sub</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>
    <!-- Subtitle Text Style -->
    <style name="OnboardingSubtitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>

    <!-- Button Style for Next and Skip -->
    <style name="OnboardingButtonStyle">
        <item name="android:layout_width">@dimen/_320sdp</item>
        <item name="android:layout_height">@dimen/_56sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/outfit_regular</item> <!-- Custom font -->
    </style>

    <!-- Progress Bar Style -->
    <style name="OnboardingProgressBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/light_blue</item> <!-- Customize progress color -->
    </style>

    <style name="OnboardingProgressIndicator">
        <item name="trackColor">#CDD8FF</item> <!-- Background color -->
        <item name="indicatorColor">#1A4BFF</item> <!-- Progress color -->
        <item name="android:layout_height">8dp</item>
        <item name="android:minHeight">8dp</item> <!-- Ensures consistent height -->
        <item name="android:maxHeight">8dp</item> <!-- Ensures consistent height -->
    </style>

    <!-- Filled Button Style -->
    <style name="ButtonFilled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/rounded_button_filled</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/outfit_semibold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="ButtonOutlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/rounded_button_outlined</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:fontFamily">@font/outfit_semibold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TextView -->
    <style name="TextView_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/text10</item>

        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>
    <!-- TextView -->
    <style name="TextView_green">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="android:textSize">@dimen/text10</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>
    <!-- Button -->
    <style name="Button_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_big_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_text</item>
<!--        <item name="android:background">@drawable/btn_bg_theme</item>-->
        <item name="android:stateListAnimator" tools:targetApi="21">@null</item>

        <item name="android:fontFamily">@font/font_outfit_semibold</item>
    </style>

    <!-- EditText -->
    <!-- edittext - white theme to change line color -->
    <style name="EditText_theme">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/gray</item>
        <item name="colorControlHighlight">@color/gray</item>
    </style>

    <style name="TextInputLayout_error">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/tip_text</item>

        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>

    <style name="TextInputLayout_hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/tip_text</item>
        <item name="android:padding">@dimen/space2</item>

        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/et_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/et_text</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/space5</item>

        <!--<item name="android:theme">@style/EditText_theme</item>-->
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>


    <style name="CustomSpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- ImageView -->
    <style name="ImageView_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space5</item>
    </style>

    <!-- Checkbox -->
    <style name="CheckBox_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text9</item>

        <item name="android:fontFamily">@font/font_outfit_regular</item>
        <!--<item name="android:button">@drawable/selector_checkbox</item>-->
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!-- Tablayout -->
    <style name="DefaultTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text9</item>
        <item name="textAllCaps">true</item>

        <item name="android:fontFamily">@font/font_outfit_semibold</item>
    </style>

    <!-- Popup menu -->
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text10</item>

        <item name="android:fontFamily">@font/font_outfit_regular</item>
    </style>


    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">

        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/TextButton</item>
    </style>
    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#1A4BFF</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
</resources>